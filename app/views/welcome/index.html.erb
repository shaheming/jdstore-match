					</ul>
				</div>
				<div class="col-md-3 col-lg-3">
					
				</div>
			</div>
		</div>
		<div class="col-md-6 col-lg-6">
			<% @products = Product.all %>
			<% count = 0 %>
			<% i = 0 %>
			<% array = [] %>
			<div class="row">
				<% while i < 4 do %>
				<div class="col-md-2 col-lg-2">
				<% while array.include?(@products[count].title) do %>
				<% count = count + 1 %>
				<% end %>
					<%= small_image(@products[count],"landingpage-img") %>
					<% i = i + 1 %>
					<% array.push(@products[count].title) %>
				</div>
				<% end %>
			</div>
			<div class="row">
				<% while i < 8 do %>
				<div class="col-md-2 col-lg-2">
				<% while array.include?(@products[count].title) do %>
				<% count = count + 1 %>
				<% end %>
					<%= small_image(@products[count],"landingpage-img") %>
					<% i = i + 1 %>
					<% array.push(@products[count].title) %>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
