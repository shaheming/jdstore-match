<div id="index-picture" class="container-fluid">
	<div class="row">
		<div class="col-md-6 text-center col-lg-6">
			<%= link_to("iMoviestore",products_path,id:"index-title") %>
			<br>
			<div class="row">
				<div class="col-md-3 col-lg-3">
					
				</div>
				<div class="col-md-6 col-lg-6">
					<ul id="index-ul" class="text-left">
						<li><i class="fa fa-caret-right fa-lg" aria-hidden="true"></i> <span>Buy ticket anywhere</span></li>
						<li><i class="fa fa-caret-right fa-lg" aria-hidden="true"></i> <span>Without lining up</span></li>
