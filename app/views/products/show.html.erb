<div class="row display-page">
	<div class="col-md-6">
		<% if @product.image.present? %>
		<%= image_tag(@product.image.thumb.url, class: "thumbnail")  %>
		<% else %>
		<%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail")  %>
		<% end %>
	</div>
	<div class="col-md-6">
		<h2><%= @product.title  %></h2>
		<div style="height: 150px;">
			<p><%=simple_format(@product.description)  %></p>

		</div>
		<div> Quantity:<%= @product.quantity%></div>
		<div class="product-price">￥<%= @product.price %></div>
		<div class="pull-middle" style="margin-top: 200px;">
		<% if @product.quantity.present? && @product.quantity > 0 %>
			<%= link_to("Select seat",product_seats_path(@product),method: :get,:class=>"btn btn-primary btn-lg ") %>

		<% else %>
			we are sorry, no such movie :(
		<% end %>
		<% if current_user.admin? %>
		<%= link_to("Add seat",new_product_seat_path(@product),method: :get, :class=>"btn btn-primary btn-lg ") %>
		<% end %>
	</div>


	</div>

</div>
